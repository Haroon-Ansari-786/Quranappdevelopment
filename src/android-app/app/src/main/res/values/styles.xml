<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Surah Number Badge Style -->
    <style name="SurahBadgeStyle">
        <item name="android:layout_width">@dimen/surah_badge_size</item>
        <item name="android:layout_height">@dimen/surah_badge_size</item>
        <item name="android:background">@drawable/gradient_badge</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Verse Number Badge Style -->
    <style name="VerseBadgeStyle">
        <item name="android:layout_width">@dimen/verse_badge_size</item>
        <item name="android:layout_height">@dimen/verse_badge_size</item>
        <item name="android:background">@drawable/circular_badge</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Revelation Type Badge Style -->
    <style name="RevelationBadgeStyle">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title Styles -->
    <style name="TitlePrimary">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleSecondary">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Styles -->
    <style name="TextPrimary">
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <!-- Arabic Text Styles -->
    <style name="ArabicTextSmall">
        <item name="android:textSize">@dimen/arabic_text_size_small</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <style name="ArabicTextMedium">
        <item name="android:textSize">@dimen/arabic_text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <style name="ArabicTextLarge">
        <item name="android:textSize">@dimen/arabic_text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <style name="ArabicTextXLarge">
        <item name="android:textSize">@dimen/arabic_text_size_xlarge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- Bottom Nav Color Selector -->
    <color name="bottom_nav_color">@color/primary</color>
</resources>
