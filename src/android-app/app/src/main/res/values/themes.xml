<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ManzilQuranApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background color -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Other attributes -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ManzilQuranApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ManzilQuranApp.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ManzilQuranApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ManzilQuranApp.Body2</item>
        
        <!-- Material Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ManzilQuranApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ManzilQuranApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ManzilQuranApp.LargeComponent</item>
    </style>

    <style name="Theme.ManzilQuranApp" parent="Base.Theme.ManzilQuranApp" />

    <!-- Splash Screen Theme -->
    <style name="Theme.ManzilQuranApp.Splash" parent="Theme.ManzilQuranApp">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.ManzilQuranApp.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ManzilQuranApp.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ManzilQuranApp.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.ManzilQuranApp.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Arabic Text Styles -->
    <style name="TextAppearance.ManzilQuranApp.Arabic" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.ManzilQuranApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.ManzilQuranApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.ManzilQuranApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.ManzilQuranApp.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
    </style>

    <style name="Widget.ManzilQuranApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Widget.ManzilQuranApp.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.ManzilQuranApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.ManzilQuranApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.ManzilQuranApp.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Dialog Style -->
    <style name="ThemeOverlay.ManzilQuranApp.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ManzilQuranApp.MediumComponent</item>
    </style>

    <!-- BottomSheet Style -->
    <style name="ThemeOverlay.ManzilQuranApp.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ManzilQuranApp.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.ManzilQuranApp.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
